@using PlayerRatings.Localization
@model PlayerRatings.ViewModels.Tournament.TournamentListViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<LocalizationKey> LocString

@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.Tournaments)];
}

<h3>@ViewData["Title"] - @Model.LeagueName</h3>

<div class="mb-3">
    <a asp-controller="Leagues" asp-action="Rating" asp-route-id="@Model.LeagueId" class="btn btn-outline-secondary">
        ‚Üê @LocString[nameof(LocalizationKey.BackToRating)]
    </a>
    @if (Model.IsAdmin)
    {
        <a asp-action="Create" asp-route-leagueId="@Model.LeagueId" class="btn btn-primary">
            + @LocString[nameof(LocalizationKey.CreateTournament)]
        </a>
    }
</div>

@if (!Model.Tournaments.Any())
{
    <div class="alert alert-info">
        No tournaments yet. @if (Model.IsAdmin) { <text>Click "Create Tournament" to add one.</text> }
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@LocString[nameof(LocalizationKey.TournamentName)]</th>
                <th>@LocString[nameof(LocalizationKey.Type)]</th>
                <th>@LocString[nameof(LocalizationKey.Dates)]</th>
                <th>@LocString[nameof(LocalizationKey.Location)]</th>
                <th class="text-center">@LocString[nameof(LocalizationKey.Matches)]</th>
                <th class="text-center">@LocString[nameof(LocalizationKey.Players)]</th>
                <th>@LocString[nameof(LocalizationKey.Factor)]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.Tournaments)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@t.Id">
                            <strong>@t.FullName</strong>
                        </a>
                        @if (!string.IsNullOrEmpty(t.Organizer))
                        {
                            <br /><small class="text-muted">@t.Organizer</small>
                        }
                    </td>
                    <td>@t.TournamentType</td>
                    <td>
                        @if (t.StartDate.HasValue)
                        {
                            @t.StartDate.Value.ToString("dd MMM yyyy")
                            @if (t.EndDate.HasValue && t.EndDate.Value.Date != t.StartDate.Value.Date)
                            {
                                <text> - @t.EndDate.Value.ToString("dd MMM yyyy")</text>
                            }
                        }
                    </td>
                    <td>@t.Location</td>
                    <td class="text-center">@t.MatchCount</td>
                    <td class="text-center">@t.PlayerCount</td>
                    <td>@(t.Factor?.ToString("F1") ?? "-")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">@LocString[nameof(LocalizationKey.Details)]</a>
                        @if (Model.IsAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-secondary">@LocString[nameof(LocalizationKey.Edit)]</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

