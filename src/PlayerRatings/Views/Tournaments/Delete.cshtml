@using PlayerRatings.Localization
@model PlayerRatings.Models.Tournament

@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.DeleteTournament)];
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-danger">
    <strong>@LocString[nameof(LocalizationKey.AreYouSureDeleteTournament)]</strong>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl>
            <dt>@LocString[nameof(LocalizationKey.Name)]</dt>
            <dd>@Model.FullName</dd>
            
            @if (!string.IsNullOrEmpty(Model.Organizer))
            {
                <dt>@LocString[nameof(LocalizationKey.Organizer)]</dt>
                <dd>@Model.Organizer</dd>
            }
            
            @if (Model.StartDate.HasValue)
            {
                <dt>@LocString[nameof(LocalizationKey.Dates)]</dt>
                <dd>
                    @Model.StartDate.Value.ToString("dd MMM yyyy")
                    @if (Model.EndDate.HasValue && Model.EndDate.Value.Date != Model.StartDate.Value.Date)
                    {
                        <text> - @Model.EndDate.Value.ToString("dd MMM yyyy")</text>
                    }
                </dd>
            }
        </dl>
    </div>
</div>

<p class="text-muted">
    <strong>@LocString[nameof(LocalizationKey.Note)]:</strong> @LocString[nameof(LocalizationKey.DeleteTournamentNote)]
    <ul>
        <li>@LocString[nameof(LocalizationKey.DeleteTournamentNote1)]</li>
        <li>@LocString[nameof(LocalizationKey.DeleteTournamentNote2)]</li>
        <li>@LocString[nameof(LocalizationKey.DeleteTournamentNote3)]</li>
    </ul>
</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">@LocString[nameof(LocalizationKey.DeleteTournament)]</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">@LocString[nameof(LocalizationKey.Cancel)]</a>
</form>
