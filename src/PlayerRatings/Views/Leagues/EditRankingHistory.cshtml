@using PlayerRatings.Localization
@using PlayerRatings.ViewModels.Player
@model PlayerRatings.ViewModels.Player.EditRankingHistoryViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<LocalizationKey> LocString

@{
    ViewData["Title"] = $"{LocString[nameof(LocalizationKey.EditRankingHistory)]} - {Model.Player.DisplayName}";
}

<div class="container" style="max-width: 900px; margin-top: 20px;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 style="margin: 0;">
                @LocString[nameof(LocalizationKey.EditRankingHistory)]: @Model.Player.DisplayName
                <small class="text-muted">(@Model.LeagueName)</small>
            </h4>
        </div>
        <div class="panel-body">
            <!-- Back link -->
            <div style="margin-bottom: 15px;">
                <a asp-action="Player" asp-route-id="@Model.LeagueId" asp-route-playerId="@Model.Player.Id" class="btn btn-default btn-sm">
                    ‚Ü© @LocString[nameof(LocalizationKey.BackToPlayer)]
                </a>
            </div>

            <!-- Add Ranking Form -->
            <div class="well" style="margin-bottom: 20px;">
                <h5 style="margin-top: 0;"><strong>+ @LocString[nameof(LocalizationKey.AddRanking)]</strong></h5>
                <form asp-action="AddRanking" method="post" id="addRankingForm">
                    <input type="hidden" name="PlayerId" value="@Model.Player.Id" />
                    <input type="hidden" name="LeagueId" value="@Model.LeagueId" />
                    <div class="row">
                        <div class="col-md-2 form-group">
                            <label>@LocString[nameof(LocalizationKey.Ranking)]</label>
                            <input type="text" class="form-control" name="Ranking" placeholder="e.g., 1D, 2K?" required pattern="^\d{1,2}[DKP]\??$" />
                        </div>
                        <div class="col-md-2 form-group">
                            <label>@LocString[nameof(LocalizationKey.Organization)]</label>
                            <select class="form-control" name="Organization" required>
                                @foreach (var org in EditRankingViewModel.CommonOrganizations)
                                {
                                    <option value="@org">@org</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 form-group">
                            <label>@LocString[nameof(LocalizationKey.Date)]</label>
                            <input type="date" class="form-control" name="RankingDate" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>@LocString[nameof(LocalizationKey.Tournament)]</label>
                            <select class="form-control" name="TournamentId" id="tournamentSelect">
                                <option value="">-- None --</option>
                                @foreach (var t in Model.TournamentOptions)
                                {
                                    var isSelected = Model.PreselectedTournamentId.HasValue && t.Id == Model.PreselectedTournamentId.Value;
                                    <option value="@t.Id" selected="@isSelected">@t.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>@LocString[nameof(LocalizationKey.Note)]</label>
                            <input type="text" class="form-control" name="RankingNote" />
                        </div>
                    </div>
                    <div style="margin-top: 10px;">
                        <button type="submit" class="btn btn-success">@LocString[nameof(LocalizationKey.AddRanking)]</button>
                    </div>
                </form>
            </div>

            <!-- Rankings List -->
            <h5><strong>@LocString[nameof(LocalizationKey.RankingHistory)]</strong></h5>
            @if (!Model.Rankings.Any())
            {
                <p class="text-muted" id="noRankingsMsg">No ranking history records.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-condensed table-hover" id="rankingsTable">
                        <thead>
                            <tr>
                                <th>@LocString[nameof(LocalizationKey.Ranking)]</th>
                                <th>@LocString[nameof(LocalizationKey.Organization)]</th>
                                <th>@LocString[nameof(LocalizationKey.Date)]</th>
                                <th>@LocString[nameof(LocalizationKey.Tournament)]</th>
                                <th>@LocString[nameof(LocalizationKey.Note)]</th>
                                <th style="width: 150px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ranking in Model.Rankings)
                            {
                                var editFormId = $"editRanking_{ranking.RankingId}";
                                <tr data-ranking-id="@ranking.RankingId">
                                    <td>
                                        <span style="color: rgb(255, 99, 132); font-weight: bold;">@ranking.Ranking</span>
                                    </td>
                                    <td>@ranking.Organization</td>
                                    <td>@(ranking.RankingDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td style="font-size: 0.9em;">
                                        @if (ranking.Tournament != null)
                                        {
                                            <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@ranking.TournamentId" target="_blank">@ranking.Tournament.FullName</a>
                                        }
                                    </td>
                                    <td style="font-size: 0.9em; color: #666;">@ranking.RankingNote</td>
                                    <td>
                                        <button class="btn btn-primary btn-xs" type="button" data-toggle="collapse" data-target="#@editFormId" title="@LocString[nameof(LocalizationKey.Edit)]">
                                            ‚úèÔ∏è Edit
                                        </button>
                                        <form asp-action="DeleteRanking" method="post" style="display: inline;" class="delete-ranking-form">
                                            <input type="hidden" name="rankingId" value="@ranking.RankingId" />
                                            <input type="hidden" name="playerId" value="@Model.Player.Id" />
                                            <input type="hidden" name="leagueId" value="@Model.LeagueId" />
                                            <input type="hidden" name="returnToEditPage" value="true" />
                                            <button type="submit" class="btn btn-danger btn-xs" title="@LocString[nameof(LocalizationKey.Delete)]" onclick="return confirm('@LocString[nameof(LocalizationKey.DeleteThisRanking)]');">üóëÔ∏è</button>
                                        </form>
                                    </td>
                                </tr>
                                <tr class="collapse" id="@editFormId">
                                    <td colspan="6" style="background-color: #f5f5f5; padding: 15px;">
                                        <form asp-action="EditRanking" method="post" class="edit-ranking-form">
                                            <input type="hidden" name="RankingId" value="@ranking.RankingId" />
                                            <input type="hidden" name="PlayerId" value="@Model.Player.Id" />
                                            <input type="hidden" name="LeagueId" value="@Model.LeagueId" />
                                            <input type="hidden" name="ReturnToEditPage" value="true" />
                                            <div class="row">
                                                <div class="col-md-2 form-group">
                                                    <label>@LocString[nameof(LocalizationKey.Ranking)]</label>
                                                    <input type="text" class="form-control input-sm" name="Ranking" value="@ranking.Ranking" required pattern="^\d{1,2}[DKP]\??$" />
                                                </div>
                                                <div class="col-md-2 form-group">
                                                    <label>@LocString[nameof(LocalizationKey.Organization)]</label>
                                                    <select class="form-control input-sm" name="Organization" required>
                                                        @foreach (var org in EditRankingViewModel.CommonOrganizations)
                                                        {
                                                            var isSelected = ranking.Organization == org || 
                                                                (string.IsNullOrEmpty(ranking.Organization) && org == "Other");
                                                            <option value="@org" selected="@isSelected">@org</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-md-2 form-group">
                                                    <label>@LocString[nameof(LocalizationKey.Date)]</label>
                                                    <input type="date" class="form-control input-sm" name="RankingDate" value="@(ranking.RankingDate?.ToString("yyyy-MM-dd"))" />
                                                </div>
                                                <div class="col-md-3 form-group">
                                                    <label>@LocString[nameof(LocalizationKey.Tournament)]</label>
                                                    <select class="form-control input-sm" name="TournamentId">
                                                        <option value="">-- None --</option>
                                                        @foreach (var t in Model.TournamentOptions)
                                                        {
                                                            var isSelected = ranking.TournamentId == t.Id;
                                                            <option value="@t.Id" selected="@isSelected">@t.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-md-3 form-group">
                                                    <label>@LocString[nameof(LocalizationKey.Note)]</label>
                                                    <input type="text" class="form-control input-sm" name="RankingNote" value="@ranking.RankingNote" placeholder="Note" />
                                                </div>
                                            </div>
                                            <div style="margin-top: 10px;">
                                                <button type="submit" class="btn btn-primary btn-sm">@LocString[nameof(LocalizationKey.Save)]</button>
                                                <button type="button" class="btn btn-default btn-sm" data-toggle="collapse" data-target="#@editFormId">@LocString[nameof(LocalizationKey.Cancel)]</button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            // Handle add ranking form submission
            $('#addRankingForm').on('submit', function(e) {
                e.preventDefault();
                var $form = $(this);
                var $btn = $form.find('button[type="submit"]');
                $btn.prop('disabled', true).text('Adding...');
                
                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function(response) {
                        if (response.success) {
                            // Reload page to show new ranking
                            location.reload();
                        } else {
                            alert(response.message || 'Error adding ranking');
                            $btn.prop('disabled', false).text('@LocString[nameof(LocalizationKey.AddRanking)]');
                        }
                    },
                    error: function() {
                        alert('Error adding ranking');
                        $btn.prop('disabled', false).text('@LocString[nameof(LocalizationKey.AddRanking)]');
                    }
                });
            });
            
            // Handle edit ranking forms
            $(document).on('submit', '.edit-ranking-form', function(e) {
                e.preventDefault();
                var $form = $(this);
                var $btn = $form.find('button[type="submit"]');
                $btn.prop('disabled', true).text('Saving...');
                
                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function(response) {
                        if (response.success) {
                            // Reload page to show updated ranking
                            location.reload();
                        } else {
                            alert(response.message || 'Error saving');
                            $btn.prop('disabled', false).text('@LocString[nameof(LocalizationKey.Save)]');
                        }
                    },
                    error: function() {
                        alert('Error saving ranking');
                        $btn.prop('disabled', false).text('@LocString[nameof(LocalizationKey.Save)]');
                    }
                });
            });
            
            // Handle delete ranking forms
            $(document).on('submit', '.delete-ranking-form', function(e) {
                e.preventDefault();
                var $form = $(this);
                
                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Error deleting');
                        }
                    },
                    error: function() {
                        alert('Error deleting ranking');
                    }
                });
            });
        });
    </script>
}

