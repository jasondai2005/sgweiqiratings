@using PlayerRatings.Localization

@inject ILanguageData LanguageData

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - PlayerRatings</title>

        <environment names="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        </environment>
        
        <!-- Bilingual name responsive styles -->
        <style>
            /* On mobile: hide-mobile class, show only preferred language */
            @@media (max-width: 767px) {
                .hide-mobile { display: none !important; }
                /* Prevent first column from being cut off */
                .table-responsive { margin-left: 0; padding-left: 10px; }
                .table th:first-child, .table td:first-child { padding-left: 12px; }
                .name-en { display: none; }
                .name-cn { display: inline; }
                .name-female { display: none; }
                /* Tournament links: hide full name, show short name */
                .tournament-link-processed .full-name { display: none; }
                .tournament-link-processed .short-name { display: inline; }
                /* Language preference overrides - only on mobile */
                body.lang-en .name-en { display: inline !important; }
                body.lang-en .name-cn { display: none !important; }
                body.lang-cn .name-en { display: none !important; }
                body.lang-cn .name-cn { display: inline !important; }
            }
            /* On desktop, always show full name (both EN and CN) */
            @@media (min-width: 768px) {
                .name-en, .name-cn, .name-female { display: inline !important; }
                /* Tournament links: show full name, hide short name */
                .tournament-link-processed .full-name { display: inline !important; }
                .tournament-link-processed .short-name { display: none !important; }
            }
        </style>
        @RenderSection("styles", required: false)
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">@LocString[nameof(LocalizationKey.ToggleNavigation)]</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                    </a>
                    <a asp-controller="Matches" asp-action="Create" class="navbar-brand visible-xs-block">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Matches" asp-action="Create">@LocString[nameof(LocalizationKey.AddNewResult)]</a></li>
                        <li><a asp-controller="Leagues" asp-action="Index">@LocString[nameof(LocalizationKey.Leagues)]</a></li>
                        <li><a asp-controller="Invites" asp-action="Index">@LocString[nameof(LocalizationKey.Invites)]</a></li>
                        <li><a asp-controller="Home" asp-action="RatingSystem">@LocString[nameof(LocalizationKey.HowItWorks)]</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">@LocString[nameof(LocalizationKey.Support)]</a></li>
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                    <ul class="nav navbar-nav navbar-right">
                        @if (ViewData["IsSgLeague"] as bool? == true)
                        {
                            var swaOnly = Context.Request.Cookies["SwaOnly"] == "true";
                            <li>
                                <form asp-controller="Home" asp-action="ToggleSwaOnly" method="post" style="margin: 0; display: inline;">
                                    <input type="hidden" name="curUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                                    <button type="submit" class="btn btn-link navbar-btn" style="color: @(swaOnly ? "#5cb85c" : "#999"); padding: 10px 8px;" title="@(swaOnly ? "SWA Only: ON" : "SWA Only: OFF")">
                                        <span style="font-weight: bold;">SWA</span>
                                        @if (swaOnly)
                                        {
                                            <span style="color: #5cb85c;">✓</span>
                                        }
                                    </button>
                                </form>
                            </li>
                        }
                        <li>
                            <a href="#" onclick="captureScreenshot(); return false;" title="@LocString[nameof(LocalizationKey.Screenshot)]" style="padding: 15px 10px;">
                                <span id="screenshotIcon">📷</span>
                            </a>
                        </li>
                    @if (LanguageData.ValidLanguages.Count() > 1)
                    {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@LocString[LanguageData.CurrentLanguage] <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu" style="min-width: 100px">
                                    @foreach (var language in LanguageData.ValidLanguages)
                                    {
                                        if (language != LanguageData.CurrentLanguage)
                                        {
                                            <li>
                                                <form asp-controller="Home" asp-action="ChangeLanguage" method="post" role="form">
                                                    <input type="hidden" name="curUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                                                    <button type="submit" class="btn btn-lg btn-block" style="background-color: white" name="language" value="@language" title="@language">

                                                        @LocString[language]

                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                        </ul>
            </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>

        <environment names="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        </environment>
        <environment names="Staging,Production">
            @await Html.PartialAsync("_YandexMetrica")
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
            </script>
        </environment>

        <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
        <script>
            // Bilingual name processing for mobile-friendly tables
            (function() {
                // Get language preference from cookie (cookie name is "lang") or default to 'cn' for mobile
                var lang = (document.cookie.match(/(?:^|;\s*)lang=([^;]+)/) || [])[1] || 'cn';
                document.body.classList.add('lang-' + lang);
                
                // Process bilingual names in table cells
                function processBilingualNames() {
                    // Target table cells in specific tables (exclude team standings)
                    var tables = document.querySelectorAll('.table:not(.no-bilingual)');
                    tables.forEach(function(table) {
                        var cells = table.querySelectorAll('td');
                        cells.forEach(function(cell) {
                            // Skip cells with team-related classes or in team columns
                            if (cell.closest('.team-name') || cell.classList.contains('team-name')) return;
                            // First process tournament links specially
                            processTournamentLinks(cell);
                            // Then process regular bilingual text
                            processNode(cell);
                        });
                    });
                    
                    // Also process elements explicitly marked with bilingual-name class
                    var bilingualElements = document.querySelectorAll('.bilingual-name');
                    bilingualElements.forEach(function(el) {
                        processNode(el);
                    });
                }
                
                // Process tournament links - use data-name attribute for short name
                function processTournamentLinks(cell) {
                    var links = cell.querySelectorAll('a[href*="/Tournaments/Details/"]');
                    links.forEach(function(link) {
                        var shortName = link.getAttribute('data-name');
                        if (!shortName) return;
                        
                        var fullText = link.textContent.trim();
                        // Convert short name to bilingual HTML, or use plain short name if single language
                        var bilingualHtml = makeBilingual(shortName);
                        var shortNameHtml = bilingualHtml || shortName;
                        
                        link.innerHTML = '<span class="full-name">' + fullText + '</span>' +
                            '<span class="short-name">' + shortNameHtml + '</span>';
                        link.classList.add('tournament-link-processed');
                    });
                }
                
                // Convert bilingual text to HTML with spans
                function makeBilingual(text) {
                    // Pattern: English followed by Chinese (find first Chinese character as split point)
                    var match = text.match(/^([A-Za-z][^\u4e00-\u9fff]*?)\s+([\u4e00-\u9fff].*)$/);
                    if (match) {
                        var enPart = match[1].trim();
                        var cnPart = match[2].trim();
                        return '<span class="name-en">' + enPart + '</span> <span class="name-cn">' + cnPart + '</span>';
                    }
                    return null;
                }
                
                function processNode(node) {
                    // Skip already processed tournament links
                    if (node.classList && node.classList.contains('tournament-link-processed')) return;
                    
                    // Process text nodes and links
                    var walker = document.createTreeWalker(node, NodeFilter.SHOW_TEXT, null, false);
                    var textNodes = [];
                    while (walker.nextNode()) {
                        // Skip if inside a processed tournament link
                        if (walker.currentNode.parentNode.closest && 
                            walker.currentNode.parentNode.closest('.tournament-link-processed')) continue;
                        if (walker.currentNode.textContent.trim()) {
                            textNodes.push(walker.currentNode);
                        }
                    }
                    
                    textNodes.forEach(function(textNode) {
                        var text = textNode.textContent;
                        // Check if text contains both English and Chinese characters
                        // Pattern: English part followed by Chinese part, optionally with ♀ between
                        var match = text.match(/^([A-Za-z][A-Za-z\s\-\.,']+?)\s*(♀?)\s*([\u4e00-\u9fff][\u4e00-\u9fff\s]*?)$/);
                        if (match) {
                            var enPart = match[1].trim();
                            var femaleSymbol = match[2];
                            var cnPart = match[3].trim();
                            
                            var span = document.createElement('span');
                            span.innerHTML = '<span class="name-en">' + enPart + '</span>' +
                                (femaleSymbol ? '<span class="name-female">♀</span>' : ' ') +
                                '<span class="name-cn">' + cnPart + '</span>';
                            textNode.parentNode.replaceChild(span, textNode);
                        }
                    });
                }
                
                // Run after DOM is ready
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', processBilingualNames);
                } else {
                    processBilingualNames();
                }
            })();
        </script>
        <script>
            async function captureScreenshot() {
                const icon = document.getElementById('screenshotIcon');
                const originalIcon = icon.textContent;
                icon.textContent = '⏳';
                
                try {
                    // Get the main content area
                    const content = document.querySelector('.container.body-content') || document.querySelector('.container') || document.body;
                    
                    // Capture the entire content
                    const canvas = await html2canvas(content, {
                        scale: 2,
                        useCORS: true,
                        allowTaint: true,
                        backgroundColor: '#ffffff',
                        scrollX: 0,
                        scrollY: -window.scrollY,
                        windowWidth: document.documentElement.scrollWidth,
                        windowHeight: document.documentElement.scrollHeight
                    });
                    
                    // Generate filename from page title
                    const title = document.title.replace(/[^a-zA-Z0-9\u4e00-\u9fa5]/g, '_').replace(/_+/g, '_');
                    const filename = title + '_' + new Date().toISOString().slice(0,10) + '.png';
                    
                    // Convert to blob and download
                    canvas.toBlob(function(blob) {
                        const link = document.createElement('a');
                        link.download = filename;
                        link.href = URL.createObjectURL(blob);
                        link.click();
                        URL.revokeObjectURL(link.href);
                    }, 'image/png');
                } catch (error) {
                    console.error('Screenshot failed:', error);
                    alert('Screenshot failed. Please try again.');
                } finally {
                    icon.textContent = originalIcon;
                }
            }
        </script>

        @RenderSection("scripts", required: false)
</body>
</html>
