@using System.Threading.Tasks
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using PlayerRatings.Localization
@using PlayerRatings.Util
@model PlayerRatings.ViewModels.Match.MatchesViewModel
@inject UserManager<ApplicationUser> UserManager;

@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.Matches)];
    var appUser = await User.GetApplicationUser(UserManager);
}

<h2>@ViewData["Title"]</h2>

<!-- Month Navigation -->
<div style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px;">
    @if (Model.PreviousMonth.HasValue)
    {
        <a asp-action="Index" asp-route-leagueid="@Model.LeagueId" asp-route-year="@Model.PreviousMonth.Value.Year" asp-route-month="@Model.PreviousMonth.Value.Month" class="btn btn-default btn-sm">
            ← @Model.PreviousMonth.Value.ToString("MM/yyyy")
        </a>
    }
    else
    {
        <span class="btn btn-default btn-sm disabled">← Prev</span>
    }

    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            <strong>@Model.CurrentMonthDisplay</strong> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" style="max-height: 300px; overflow-y: auto;">
            @foreach (var month in Model.AvailableMonths)
            {
                var isActive = month == Model.CurrentMonth;
                <li class="@(isActive ? "active" : "")">
                    <a asp-action="Index" asp-route-leagueid="@Model.LeagueId" asp-route-year="@month.Year" asp-route-month="@month.Month">
                        @month.ToString("MM/yyyy")
                    </a>
                </li>
            }
        </ul>
    </div>

    @if (Model.NextMonth.HasValue)
    {
        <a asp-action="Index" asp-route-leagueid="@Model.LeagueId" asp-route-year="@Model.NextMonth.Value.Year" asp-route-month="@Model.NextMonth.Value.Month" class="btn btn-default btn-sm">
            @Model.NextMonth.Value.ToString("MM/yyyy") →
        </a>
    }
    else
    {
        <span class="btn btn-default btn-sm disabled">Next →</span>
    }

    <span style="color: #666; margin-left: 10px;">(@Model.Matches.Count() @LocString[nameof(LocalizationKey.Matches)])</span>
</div>

@if (Model.Matches.Any())
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>@LocString[nameof(LocalizationKey.Match)]</th>
            <th>Score</th>
            <th>Tournament</th>
            <th>@LocString[nameof(LocalizationKey.Date)]</th>
            <th>@LocString[nameof(LocalizationKey.Factor)]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Matches)
    {
        var player1Ranking = item.FirstPlayer?.GetCombinedRankingBeforeDate(item.Date) ?? "";
        var player2Ranking = item.SecondPlayer?.GetCombinedRankingBeforeDate(item.Date) ?? "";
        <tr>
            <td>
                @if (item.FirstPlayer != null)
                {
                    <a asp-controller="Leagues" asp-action="Player" asp-route-id="@Model.LeagueId" asp-route-playerId="@item.FirstPlayerId">@item.FirstPlayer.DisplayName</a>
                    <span style="color: #999; font-size: 0.85em;">@player1Ranking</span>
                }
                else
                {
                    <span class="text-muted" style="font-style: italic;">BYE</span>
                }
                <span style="margin: 0 5px;">vs</span>
                @if (item.SecondPlayer != null)
                {
                    <a asp-controller="Leagues" asp-action="Player" asp-route-id="@Model.LeagueId" asp-route-playerId="@item.SecondPlayerId">@item.SecondPlayer.DisplayName</a>
                    <span style="color: #999; font-size: 0.85em;">@player2Ranking</span>
                }
                else
                {
                    <span class="text-muted" style="font-style: italic;">BYE</span>
                }
            </td>
            <td>
                @item.GetScore()
            </td>
            <td>
                @if (item.TournamentId.HasValue && item.Tournament != null)
                {
                    <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@item.TournamentId" data-name="@item.Tournament.Name">@item.Tournament.FullName</a>
                    @if (item.Round.HasValue)
                    {
                        <text> R@(item.Round)</text>
                    }
                }
                else if (!string.IsNullOrEmpty(item.MatchName))
                {
                    @item.MatchName
                }
            </td>
            <td>
                @item.Date.ToString("dd/MM/yyyy")
            </td>
            <td>
                @(item.Factor.HasValue ? item.Factor.Value.ToString("0.#") : "-")
            </td>
            <td>
                @if (item.League.CreatedByUserId == appUser.Id)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">@LocString[nameof(LocalizationKey.Edit)]</a>
                    @: |
                    <a asp-action="Delete" asp-route-id="@item.Id">@LocString[nameof(LocalizationKey.Delete)]</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
    <p class="text-muted">No matches found for this month.</p>
}